{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "defaultProject": "ripcore",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "ripcore": {
      "type": "application",
      "root": "apps/ripcore",
      "entryFile": "main",
      "sourceRoot": "apps/ripcore/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ripcore/tsconfig.app.json"
      }
    }
  }
}